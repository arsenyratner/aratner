# {{ ansible_managed }}

auto {{ ansible_default_ipv4.interface }}
iface {{ ansible_default_ipv4.interface }} inet {{ network_ipv4.type }}
{% if network_ipv4.address is defined %}    
    address {{network_ipv4.address}}
{% endif %}
{% if network_ipv4.netmask is defined %}
    netmask {{network_ipv4.netmask}}
{% endif %}
{% if network_ipv4.gateway is defined %}
    gateway {{network_ipv4.gateway}}
{% endif %}
{% if network_ipv4.dns is defined %}
    dns-nameservers : {% for dns in network_ipv4.dns %}{{dns}} {% endfor %}
{% endif %}
